<div class="page-selector-wrapper">
    <div class="page-selector">     
       
        @for(int i=1; i<=NumberOfPages;i++){
            int index = i;
            string classname = index == SelectedPage? "selected":"";
            <button class=@classname @onclick="@(() => OnClick.InvokeAsync(index))">@i</button>
        }
    </div>
</div>

@code {
    [Parameter] public int NumberOfPages { get; set; } = 5;

    [Parameter] public EventCallback<int> OnClick { get; set; }

