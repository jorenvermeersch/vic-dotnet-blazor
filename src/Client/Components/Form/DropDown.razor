<div>
    <div class="input-container">
        <label for="">
            @Label:
        </label>
        <div class="dropdown">
            <button type="button" class="drop-down-button" @onclick="ToggleDropDown">@ChosenOption</button>
            <div class="drop-down-items" style=@style>
                <input placeholder="Zoeken..." @oninput="ShowSearchResults" />
                @foreach (var item in filteredItems)
                {
                    <button type="button" class="drop-down-button-item" onclick="@(() => UpdateChosenOption(item.Key, item.Value))">@item.Key</button>
                }
            </div>
        </div>
    </div>
    @ChildContent
</div>




