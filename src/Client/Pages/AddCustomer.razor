@page "/customer/add"
@layout NoGlobalSearchLayout

<PageTitle>Klant Toevoegen</PageTitle>

<div class="context-menu">
    <Button Text="Toevoegen" />
</div>
<div class="three-column-layout">
    <div class="one-third">
        <Title text="Algemene informatie" />
        <Input Type="@Input.InputType.TEXT" Label="Naam" customCss="@_customcss" />
        <Input Type="@Input.InputType.SELECT" Label="Department" customCss="@_customcss" />
        <Input Type="@Input.InputType.SELECT" Label="Opleiding" customCss="@_customcss" />
        <Input PlaceHolder="" Type="@Input.InputType.SELECT" Label="Type" customCss="@_customcss" />
    </div>
    <div class="one-third">
        <Title text="Contactgegevens" />
        <Input Type="@Input.InputType.TEXT" Label="Voornaam" customCss="@_customcss" />
        <Input Type="@Input.InputType.TEXT" Label="Naam" customCss="@_customcss" />
        <Input Type="@Input.InputType.TEXT" Label="E-mailadres" customCss="@_customcss" />
        <Input Type="@Input.InputType.TEXT" Label="Telefoonnummer" customCss="@_customcss" />
    </div>
    <div class="one-third">
        <Title text="Back-up contactgegevens" />
        <Input Type="@Input.InputType.TEXT" Label="Voornaam" customCss="@_customcss" />
        <Input Type="@Input.InputType.TEXT" Label="Naam" customCss="@_customcss" />
        <Input Type="@Input.InputType.TEXT" Label="E-mailadres" customCss="@_customcss" />
        <Input Type="@Input.InputType.TEXT" Label="Telefoonnummer" customCss="@_customcss" />

    </div>
</div>


@code {
    private string _customcss = "background-color: white";
}
